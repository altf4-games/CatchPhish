{
  "manifest_version": 3,
  "name": "CatchPhish Protector",
  "version": "1.0",
  "description": "Real-time phishing detection and protection as you browse",
  "permissions": [
    "tabs",
    "webNavigation",
    "webRequest",
    "storage",
    "notifications",
    "declarativeNetRequest",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["block.html", "images/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": []
  }
}
